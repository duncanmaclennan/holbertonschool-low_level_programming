#include <stdio.h>
#include "main.h"
/**
 * _pow_recursion - prints a string
 * @x: location of the string in memory
 * @y: the exponent
 * Return: the conversion
 */
int _sqrt_recursion(int n)
{
	if (n < 0)
	{
		return (-1);
	}
	else if (n == 0 || n == 1)
	{
		return (n);
	}
	else
	{
		return (n / _sqrt_recursion(n - 1));
	}
}
